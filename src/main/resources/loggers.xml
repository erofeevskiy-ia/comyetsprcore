<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="consoleEventLogger" class="loggers.ConsoleEventLogger"/>

    <bean name="fileEventLogger" class="loggers.FileEventLogger">
        <!--<constructor-arg name="filename" value="111.txt"/>-->
        <property name="filename" value="111.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="loggers.CacheFileEvenLogger" parent="fileEventLogger" destroy-method="destroy">
        <property name="cacheSize" value="5"/>
    </bean>

    <bean id="combinedEventLogger" class="loggers.CombinedEventLogger">
        <property name="loggers">
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </property>
    </bean>
</beans>